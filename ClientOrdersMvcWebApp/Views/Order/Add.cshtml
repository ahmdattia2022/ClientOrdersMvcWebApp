@model ClientOrdersMvcWebApp.ViewModel.OrderVM
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex flex-column flex-root" id="kt_app_root">
    <!--begin::Authentication - Sign-up -->
    <div class="d-flex flex-column flex-lg-row flex-column-fluid">
        <!--begin::Body-->
        <div class="d-flex flex-column flex-lg-row-fluid w-lg-50 p-10 order-2 order-lg-1">
            <!--begin::Form-->
            <div class="d-flex flex-center flex-column flex-lg-row-fluid">
                <!--begin::Wrapper-->
                <div class="w-lg-500px p-10">
                    <!--begin::Form-->
                    <form asp-action="Add" asp-controller="Order" method="post" class="form w-100">
                        <div class="text-center mb-11">
                            <h1 class="text-dark fw-bolder mb-3">Add New Order</h1>
                        </div>

                        <div class="fv-row mb-8">
                            <input asp-for="OrderSerialNo" placeholder="Order Serial Number" type="text" autocomplete="off" class="form-control bg-transparent" />
                            <span class="text-danger" asp-validation-for="OrderSerialNo"></span>
                        </div>
                        <div class="fv-row mb-8">
                            <input asp-for="OrderDate" placeholder="Order Date" type="date" autocomplete="off" class="form-control bg-transparent" />
                            <span class="text-danger" asp-validation-for="OrderDate"></span>
                        </div>
                        <div class="fv-row mb-8">
                            <input asp-for="OrderDetails" placeholder="Order Details" type="text" autocomplete="off" class="form-control bg-transparent" />
                            <span class="text-danger" asp-validation-for="OrderDetails"></span>
                        </div>
                        <div class="fv-row mb-8">
                            <input asp-for="OrderStatus" placeholder="Order Status" type="text" autocomplete="off" class="form-control bg-transparent" />
                            <span class="text-danger" asp-validation-for="OrderStatus"></span>
                        </div>

                        <!--begin::Submit button-->
                        <button type="submit" class="btn btn-primary" onclick="CheckAvailability()">
                            Add
                        </button>
                        <!--end::Submit button-->

                    </form>

                    <!--end::Form-->
                </div>
                <!--end::Wrapper-->
            </div>
            <!--end::Form-->
            <!--begin::Footer-->
            <div class="d-flex flex-center flex-wrap px-5">
                <!--begin::Links-->
                <div class="d-flex fw-semibold text-primary fs-base">
                    
                    <a href="~/Content/../demo1/pages/contact.html" class="px-5" target="_blank">Contact Us</a>
                </div>
                <!--end::Links-->
            </div>
            <!--end::Footer-->
        </div>
        <!--end::Body-->
       
    </div>
    <!--end::Authentication - Sign-up-->
</div>

